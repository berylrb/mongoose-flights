<%- include("../partials/html-head") %>
<link rel="stylesheet" href="/stylesheets/flights/new.css">
<%- include("../partials/nav") %>  


<main>
  <h1><%= title %></h1>
  <p>Before adding a meal, check to see if it is already in on the menu.
    <select name="current-meals">
      <% meals.forEach(meal => { %>
        <option><%= meal.name %></option>
      <% }) %>
    </select>
  </p>
  <form id="add-meal-form" action="/meals" method="POST">
    <label for="meal-input">Meal</label>
    <input type="text" name="name" id="meal-input">
    <button type="submit">Add Meal</button>
  </form>
</main>

