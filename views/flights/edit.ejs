<%- include("../partials/html-head") %>
<link rel="stylesheet" href="/stylesheets/flights/new.css">
<%- include("../partials/nav") %>  

<main>
  <h1><%= title %></h1>
  <form id="edit-form" action="/flights/<%= flight._id %>?_method=PUT" method="POST">
    <label for="airline-input">Airline</label>
    <input type="text" name="airline" id="airline-input">
    <label for="airport-input">Airport</label>
    <input type="text" name="airport" id="airport-input">
    <label for="flight-number-input">Flight Number</label>
    <input type="number" name="flightNo" id="flight-number-input">
    <label for="departure">Departs</label>
    <input type="datetime-local" name="departs" id="departs-input">
    <button type="submit">Submit</button>
  </form>
</main>

<%- include("../partials/footer") %>  