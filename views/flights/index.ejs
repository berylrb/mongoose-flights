<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/flights/index.css" />
<script src="https://www.kryogenix.org/code/browser/sorttable/sorttable.js"></script>
<%- include('../partials/nav') %>

<main>
  <h1><%= title %></h1>
  <div class="wrapper">
  <table class="sortable">
    <p>Click on Category Names to Sort</p>
    <thead>
      <tr>
        <th>DELETE FLIGHT</th>
        <th onclick="sortTable(0)">AIRLINE</th>
        <th onclick="sortTable(1)">AIRPORT</th>
        <th>FLIGHT NUMBER</th>
        <th>DEPARTS</th>
      </tr>
    </thead>
    <tbody>
      <% flights.forEach(flight => { %>
        <tr>
          <td><form action="/flights/<%= flight._id %>?_method=DELETE" class="delete-form" method="POST">
            <button type="submit" onclick="return confirm('Are you sure you want to delete this flight?')">x</button>
          </form></td>
          <td><%= flight.airline %></td>
          <td><%= flight.airport %></td>
          <td class="flight-no-class"><a href="/flights/<%= flight._id %>" <%- title === 'Flight Details' ? 'class="active"' : '' %>><%= flight.flightNo %></a></td>
          <td class=<%= flight.departs < Date.now()?"passed":"upcoming"%>><%= flight.departs.toLocaleDateString() + " -- " + flight.departs.toLocaleTimeString([], {timeStyle: 'short'}) %></td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</div>
</main>

<%- include('../partials/footer') %>
